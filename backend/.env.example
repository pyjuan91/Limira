# Application
APP_NAME=Limira
ENVIRONMENT=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://limira_user:limira_password@localhost:5432/limira_db

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5173

# AI Services
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# Choose primary LLM provider: openai or anthropic
PRIMARY_LLM_PROVIDER=openai

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=limira-files
# For development, you can use MinIO or LocalStack
S3_ENDPOINT_URL=

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.png,.jpg,.jpeg,.docx

# Video/Transcription
ENABLE_VIDEO_CHAT=True
TRANSCRIPTION_SERVICE=whisper  # whisper or deepgram
DEEPGRAM_API_KEY=
